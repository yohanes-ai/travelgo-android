<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qreatiq.travelgo">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- <uses-permission android:name="android.permission." /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginMenuActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity android:name=".TourActivity" />
        <activity
            android:name=".LoginFormActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".SignUpFormActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/data" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".CreateTourActivity"
            android:label="Create Package" />
        <activity
            android:name=".PackageActivity"
            android:label="List Tour Package" />
        <activity android:name=".CreatePackage" />
        <activity
            android:name=".CreateTourPackageActivity"
            android:label="Create Tour Package" />
        <activity
            android:name=".HistoryTransactionActivity"
            android:label="History Transaction" />
        <activity android:name=".HistoryTransactionDetailActivity" android:label="Detail Transaction"></activity>
    </application>

</manifest>