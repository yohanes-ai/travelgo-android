<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginMenuActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_bali" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView" android:scaleType="center"/>
    <TextView
            android:text="TravelGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="88dp"
            tools:layout_editor_absoluteX="106dp" android:id="@+id/textView"
            app:fontFamily="sans-serif" android:typeface="sans" android:textSize="50sp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="Book Your Trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="308dp"
            tools:layout_editor_absoluteX="38dp" android:id="@+id/textView4" android:textSize="24sp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="meet your agencies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="340dp"
            tools:layout_editor_absoluteX="38dp" android:id="@+id/textView5" android:textSize="14sp"
            android:textColor="@android:color/white"/>
    <Button
            android:text="SIGNUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="400dp"
            tools:layout_editor_absoluteX="88dp" android:id="@+id/button"
            style="@style/Widget.AppCompat.Button"/>
    <Button
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="400dp"
            tools:layout_editor_absoluteX="209dp" android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Colored"/>
    <Button
            android:text="I'M A GUEST"
            android:layout_width="89dp"
            android:layout_height="32dp" tools:layout_editor_absoluteY="464dp"
            tools:layout_editor_absoluteX="147dp" android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Small" android:textSize="10sp"/>

</android.support.constraint.ConstraintLayout>