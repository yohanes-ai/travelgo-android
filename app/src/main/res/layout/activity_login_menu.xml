<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginMenuActivity" tools:layout_editor_absoluteY="25dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_bali"
            android:id="@+id/imageView" android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Book Your Trip, Meet Your Agencies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textSize="14sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="SIGNUP"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button"
            android:onClick="signUpAction"
            style="@style/Widget.AppCompat.Button.Colored.Qreatiq.Gray"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp" android:layout_marginEnd="14dp" android:layout_marginRight="14dp"/>
    <Button
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Colored.Qreatiq.Blue"
            android:onClick="loginAction"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" android:layout_marginEnd="93dp"
            android:layout_marginRight="93dp"/>
    <Button
            android:text="I'M A GUEST"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/button3"
            android:onClick="guestAction"
            style="@style/Widget.AppCompat.Button.Small" android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginBottom="108dp"
            app:layout_constraintEnd_toEndOf="@+id/button2" app:layout_constraintStart_toStartOf="@+id/button"
            android:layout_marginLeft="52dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="52dp" android:layout_marginEnd="52dp" android:layout_marginRight="52dp"/>
    <ImageView
            android:layout_width="103dp"
            android:layout_height="112dp" app:srcCompat="@drawable/ic_icon"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="TravelGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="30sp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>